
<div class="row">
	<h2>Tarif</h2>
	<div class="col-xs-4">
		<table class="table table-condensed table-bordered">
  			{% for price in pricelist %}
  			<tr>
    			<td>
    				<b>{{ price.name }}</b> - {{ price.description }}
    			</td>
    			<td class="text-right">
    				{{ (price.price / coeff) | number_format(2, '.', '') }} &euro;
    			</td>
    		</tr>
  			{% endfor %}
		</table>
	</div>
	<div class="col-xs-8">
		<div class="jumbotron">
			{% trans %}opening_warning{% endtrans %}
			<hr>
			{% trans %}reduced_warning{% endtrans %}
		</div>

		
	</div>
</div>

